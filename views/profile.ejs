<!doctype html>
<html>
<head>
    <title>SoundChest</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> My Chest</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <p>Name song you want in your playlist</p>
        <p>Post the SoundCloud embedded source link for the song</p>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->

        <div class="col-sm-6">
          <h3>Treasure</h3>
          <ul class="playlist">
          <% for(var i=0; i<sounds.length; i++) {%>
            <li class="song">
              <p><%= sounds[i].name %></p>
              <p><span>song name:</span> <%= sounds[i].song %> </p>
              <p><span>soundcloudlink:</span> <%= sounds[i].link %></p>
              <p><iframe width="100%" height="300" scrolling="no" frameborder="" allow="autoplay" src="<%= sounds[i].link %>"></iframe> </p>
              <p><i class="fa fa-trash" ></i></p>
              <!-- <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->

            </li>
          <% } %>
          </ul>
            </div>
          <section class="info" >

          <h2>Add a message</h2>
        <% if (user.local.email) { %>
          <form action="/sounds" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="song name" name="song">
            <input type="text" placeholder="embed link" name="link">
            <button type="submit">Submit</button>
          </form>
          </section>
        <% } %>




        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>


</div>

<script src="main.js"></script>

</body>
</html>
